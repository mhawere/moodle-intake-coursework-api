<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/courseworkapi/db" VERSION="20241214" COMMENT="XMLDB file for Moodle local/courseworkapi"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_cwapi_intakes" COMMENT="Global intake periods for coursework assignment">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Human-readable intake name"/>
        <FIELD NAME="code" TYPE="char" LENGTH="100" NOTNULL="true" COMMENT="Unique intake code"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false" COMMENT="Optional intake description"/>
        <FIELD NAME="active" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Whether intake is active"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Time created"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Time modified"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who created this intake"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="createdby" TYPE="foreign" FIELDS="createdby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="code" UNIQUE="true" FIELDS="code"/>
        <INDEX NAME="active" UNIQUE="false" FIELDS="active"/>
      </INDEXES>
    </TABLE>
    
    <TABLE NAME="local_cwapi_quiz_map" COMMENT="Maps quizzes to intake periods">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Quiz instance ID"/>
        <FIELD NAME="intakeid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Intake ID"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Time created"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who created this mapping"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="quizid" TYPE="foreign" FIELDS="quizid" REFTABLE="quiz" REFFIELDS="id"/>
        <KEY NAME="intakeid" TYPE="foreign" FIELDS="intakeid" REFTABLE="local_cwapi_intakes" REFFIELDS="id"/>
        <KEY NAME="createdby" TYPE="foreign" FIELDS="createdby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="quiz_intake" UNIQUE="true" FIELDS="quizid"/>
      </INDEXES>
    </TABLE>
    
    <TABLE NAME="local_cwapi_assign_map" COMMENT="Maps assignments to intake periods">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Assignment instance ID"/>
        <FIELD NAME="intakeid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Intake ID"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Time created"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who created this mapping"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignmentid" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id"/>
        <KEY NAME="intakeid" TYPE="foreign" FIELDS="intakeid" REFTABLE="local_cwapi_intakes" REFFIELDS="id"/>
        <KEY NAME="createdby" TYPE="foreign" FIELDS="createdby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="assign_intake" UNIQUE="true" FIELDS="assignmentid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
